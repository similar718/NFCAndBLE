<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_get_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取设备信息"
        />

    <EditText
        android:id="@+id/et_rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="设置rssi区间,英文点隔开"
        android:textSize="11sp"
        android:layout_toRightOf="@+id/btn_get_info"
        android:visibility="visible"
        android:background="#e5e5e5"
        android:layout_alignBottom="@+id/btn_get_info"
        android:layout_alignTop="@+id/btn_get_info"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/btn_rssi_setting"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/tv_rssi_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前rssi的范围最小：-75"
        android:layout_below="@+id/et_rssi"
        android:layout_alignLeft="@+id/et_rssi"
        android:layout_alignRight="@+id/et_rssi"
        android:textSize="10sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:singleLine="true"
        />

    <Button
        android:id="@+id/btn_rssi_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前状态："
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_status"/>

    <TextView
        android:id="@+id/tv_Rssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI: "
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_location_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:text="蓝牙插件定位信息\n经度：22.5846798656784\n纬度：113.654316841654"
        />
</RelativeLayout>
