<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="activity"
            type="com.nfc.cn.login.LoginActivity" />
        <variable
            name="model"
            type="com.nfc.cn.login.vm.LoginViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/line_bg"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_main_black"
                android:gravity="center"
                android:text="用户名称："
                />
            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="请输入用户名称"
                android:gravity="left|center"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/text_main_black_gray"
                android:textColor="@color/text_main_black_c"
                android:singleLine="true"
                android:layout_toRightOf="@+id/tv_username"/>

            <TextView
                android:id="@+id/tv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/text_main_black"
                android:gravity="center"
                android:text="用户密码："
                android:layout_below="@+id/tv_username"
                android:layout_marginTop="@dimen/dp_20"
                />
            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@null"
                android:layout_marginLeft="@dimen/dp_10"
                android:hint="请输入用户密码"
                android:gravity="left|center"
                android:textSize="@dimen/text_size_16"
                android:textColorHint="@color/text_main_black_gray"
                android:textColor="@color/text_main_black_c"
                android:singleLine="true"
                android:layout_below="@+id/tv_username"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toRightOf="@+id/tv_pwd"/>

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/text_main_black"
                android:layout_below="@+id/tv_pwd"
                android:layout_marginTop="@dimen/dp_30"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/white"
                android:text="登   录"
                android:gravity="center"
                android:textStyle="bold"
                />
        </RelativeLayout>

    </RelativeLayout>
</layout>